<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.automated.taxinow.component.MyFontTextView
        android:id="@+id/tvSpnItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/feedback_padding"
        android:paddingTop="@dimen/feedback_padding"
        android:text="Morning"
        android:textColor="@color/theme_color" />

    <com.automated.taxinow.component.MyFontTextView
        android:id="@+id/tvSpnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSpnItem"
        android:paddingLeft="@dimen/feedback_padding"
        android:text="Depature:8h Return : 12h"
        android:textColor="@color/tour_text_gray"
        android:textSize="@dimen/font_small" />

</RelativeLayout>