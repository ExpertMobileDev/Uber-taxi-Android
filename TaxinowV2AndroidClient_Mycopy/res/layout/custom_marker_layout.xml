<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_pin" />

    <com.automated.taxinow.component.MyFontTextView
        android:id="@+id/num_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_history_margin_top"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_popup_big"
        android:textStyle="bold" />

    <com.automated.taxinow.component.MyFontTextView
        android:id="@+id/tvDurationUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small" />

    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/android:progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_fp_margin"
        android:visibility="visible" />

</RelativeLayout>